section#loading {
  width: 100%
  height: 100%
  position: absolute
  top: 0
  left: 0
  background-color: #ffa5a5
  text-align: center

  &.hidden {
    display: none
  }

  &:before {
    content: ""
    display: inline-block
    height: 100%
    vertical-align: middle
  }

  .loading__wrapper {
    display: inline-block
    vertical-align: middle
  }

}