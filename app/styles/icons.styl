i.icn {

  &.burger {
    display: block
    width: 16px
    height: 10px

    &:before, &:after {
      content: ""
      display: block
      width: 100%
      height: 2px
      border-top: 2px #131315 solid
      border-bottom: 2px #131315 solid
    }

    &:after {
      border-top: 0
    }

  }

}