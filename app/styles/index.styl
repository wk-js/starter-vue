@require './reset.styl'
@require './fonts.styl'
@require './icons.styl'

html, body {
  overflow: hidden
  width: 100%
  height: 100%
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  margin: 0
  padding: 0

  font-family: "Lato", "Helvetica"
  font-weight: 500
  font-size: 16px

  background-color: #181818
}

.mmp-debug {
  overflow: hidden
  position: fixed
  left: 10px
  bottom: 10px
  pointer-events: none
  z-index: 1000

  li {
    display: block
    text-align: left
    font-family: Courier
    font-size: 11px
    text-transform: uppercase
    line-height: 1.25em

    .mmp-debug__key {
      font-weight: bold
    }
  }
}

@require './../scripts/**/!(_*.styl)' // Require all excepted underscored file